/* ========================== HEADER ========================== */

header {
  height: 80px;
  color: #FFFFFF;
}

.container {
  width: 80%;
  margin: 0 auto;
  margin-top: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

nav ul {
  display: flex;
  list-style: none;
}

nav ul li a:hover {
  display: flex;
  list-style: none;
  color: black;
}

nav ul li {
  margin-right: 40px;
}

nav ul li:last-child {
  margin-right: 0;
}

nav ul li a {
  color: #FFFFFF;
  text-decoration: none;
  text-transform: uppercase;
  letter-spacing: 2px;
  font-family: "Open Sans", "Helvetica Neue", sans-serif;
}

h1 {
  margin: 0;
  color: white;
  letter-spacing: 2px;
  font-family: "Open Sans", "Helvetica Neue", sans-serif;
}

.title {
	color: white;
}


/* =========================== FOOTER =========================== */

.foot{
	width: 100%;
	transform: translateX(-8px);
	color: white;
	text-align: center;
	letter-spacing : 3px;
	position: absolute;
	bottom: 0;
	margin-bottom: 0;
	font-family: "Open Sans", "Helvetica Neue", sans-serif;
	background-color:  #313131;
}